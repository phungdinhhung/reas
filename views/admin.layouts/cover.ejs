<!DOCTYPE html>
<html lang="en">
   <%- include ('header')%>
   <body>
      <% if (alert.length > 0) { %>
      <div class="alert__success">
         <i class="las la-check-circle"></i>
         <div class="alert__content">
            <div class="success__first">
               <p>Thành Công!</p>
            </div>
            <div class="success__second">
               <p><%= alert%></p>
            </div>
         </div>
      </div>
      <% } %> <% if (fail.length > 0) { %>
      <div class="alert__fail">
         <i class="las la-times-circle"></i>
         <div class="alert__content">
            <div class="fail__first">
               <p>Thất bại!</p>
            </div>
            <div class="fail__second">
               <p><%= fail%></p>
            </div>
         </div>
      </div>
      <% } %>
      <!-- sidebar -->
      <%- include('sidebar')%>
      <!-- sidebar -->
      <div class="main-content">
         <!-- Navbar -->
         <%- include('navbar')%>
         <!-- Navbar -->
         <main>
            <!-- content -->
            <div class="container"><%- include(content)%></div>
            <!-- content -->
         </main>
      </div>
   </body>
</html>
