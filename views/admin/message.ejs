<!-- CONTENT  -->
<section class="content">
   <div class="content-header"></div>
   <div class="content__body">
      <div class="card">
         <div class="card-header">
            <h4>Quản lý tin nhắn</h4>
            <form>
               <div class="search-wrapper">
                  <input type="text" placeholder="Tìm kiếm" name="search" />
               </div>
            </form>
         </div>
         <div class="card-body">
            <table class="table table-bordered">
               <thead>
                  <tr>
                     <th class="text-center align-middle">STT</th>
                     <th class="text-center align-middle">Email</th>
                     <th class="text-center align-middle">Số điện thoại</th>
                     <th class="text-center align-middle">Tên người dùng</th>
                     <th class="text-center align-middle">Nội dung tin nhắn</th>
                     <th class="text-center align-middle">Thời gian</th>
                     <th class="text-center align-middle">Action</th>
                  </tr>
               </thead>
               <% index = 1 %> <% for(let i = message.length - 1; i >= 0; i--) {%>
               <tbody>
                  <th class="text-center align-middle"><%= index++ %></th>
                  <td class="text-center align-middle"><%= message[i].email %></td>
                  <td class="text-center align-middle"><%= message[i].phonenumber %></td>
                  <td class="text-center align-middle"><%= message[i].username %></td>
                  <td class="text-center align-middle text-wrap"><%= message[i].content %></td>
                  <td class="text-center align-middle text-nowrap">
                     <%= message[i].createdAt.toLocaleTimeString() %><br /><%= message[i].createdAt.toLocaleDateString()
                     %>
                  </td>
                  <td class="text-center align-middle">
                     <a href="/dashboard/deletemess?id=<%= message[i]._id %>" class="btn btn-danger">Xóa</a>
                  </td>
               </tbody>
               <% } %>
            </table>
         </div>
      </div>
   </div>
   <script>
      const $ = document.querySelector.bind(document);
      $('.sidebar-menu_message').classList.add('active');
   </script>
</section>
